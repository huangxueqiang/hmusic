<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/float_window_big_layout"
              android:orientation="vertical"
              android:layout_width="150dp"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_big">
	<TextView
			android:id="@+id/float_title"
			android:text="未知歌曲"
			android:layout_gravity="center"
			android:textColor="@color/white"
			android:textSize="18sp"
			android:maxWidth="125dp"
			android:paddingTop="5dp"
			android:singleLine="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
		<ImageButton
				android:id="@+id/float_pre_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="5dp"
				android:paddingRight="10dp"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:background="@color/transparent"
				android:src="@drawable/not_pre_selector"
				/>
		<ImageButton
				android:id="@+id/float_play_btn"
				android:layout_width="wrap_content"
				android:layout_centerHorizontal="true"
				android:padding="5dp"
				android:layout_height="wrap_content"
				android:background="@color/transparent"
				android:src="@drawable/not_play_selector"
				/>
		<ImageButton
				android:id="@+id/float_next_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:paddingRight="10dp"
				android:paddingTop="5dp"
				android:paddingLeft="5dp"
				android:paddingBottom="5dp"
				android:background="@color/transparent"
				android:src="@drawable/not_next_selector"
				/>
	</RelativeLayout>
	<LinearLayout
			android:gravity="center"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
		<ImageButton
				android:id="@+id/float_return_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingRight="10dp"
				android:paddingBottom="5dp"
				android:background="@color/transparent"
				android:src="@drawable/float_return_selector"/>
		<ImageButton
				android:id="@+id/float_exit_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="10dp"
				android:background="@color/transparent"
				android:src="@drawable/float_exit_selector"/>
	</LinearLayout>
</LinearLayout><!-- From: file:/D:/Android/HMusic/app/src/main/res/layout/float_window_big.xml -->