<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:wave="http://schemas.android.com/apk/res-auto"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
	<com.android.hhuimie.hmusic.waveview.WaveView
			android:id="@+id/wave_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@android:color/white"
			wave:above_wave_color="@android:color/white"
			wave:blow_wave_color="@android:color/white"
			wave:progress="0"
			wave:wave_height="little"
			wave:wave_hz="normal"
			wave:wave_length="middle"/>
	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="match_parent"
	              android:orientation="vertical">
		<RelativeLayout android:layout_width="match_parent"
		                android:layout_weight="1"
		                android:focusable="true"
		                android:focusableInTouchMode="true"
		                android:clickable="true"
		                android:descendantFocusability="blocksDescendants"
		                android:layout_height="0dp">
			<!--<View android:layout_width="match_parent"-->
			<!--android:layout_height="0dp"-->
			<!--android:layout_weight="1"-->
			<!--android:focusableInTouchMode="false"-->
			<!--android:focusable="false"-->
			<!--android:clickable="false"-->
			<!--/>-->
			<ImageView
					android:id="@+id/album_image"
					android:layout_centerInParent="true"
					android:layout_width="250dp"
					android:src="@drawable/defaultalbum"
					android:layout_gravity="center"
					android:layout_height="250dp"/>
			<!--<View android:layout_width="match_parent"-->
			<!--android:layout_height="0dp"-->
			<!--android:focusableInTouchMode="false"-->
			<!--android:focusable="false"-->
			<!--android:clickable="false"-->
			<!--android:layout_weight="1"/>-->
		</RelativeLayout>
		<LinearLayout android:layout_width="match_parent"

		              android:orientation="vertical"
		              android:layout_height="wrap_content">
			<LinearLayout
					android:layout_width="match_parent"
					android:orientation="horizontal"
					android:layout_margin="5dp"
					android:layout_height="wrap_content">
				<ImageButton
						android:id="@+id/play_control"
						android:src="@drawable/play_btn_loop_selector"
						android:background="@color/transparent"
						android:layout_width="0dp"
						android:layout_weight="1"
						android:layout_height="wrap_content"/>
				<ImageButton
						android:id="@+id/play_previous"
						android:src="@drawable/play_btn_previous_selector"
						android:background="@color/transparent"
						android:layout_width="0dp"
						android:layout_weight="1"
						android:layout_height="wrap_content"/>
				<ImageButton
						android:id="@+id/play_play_pause"
						android:src="@drawable/play_btn_pause_selector"
						android:background="@color/transparent"
						android:layout_width="0dp"
						android:layout_weight="1"
						android:layout_height="wrap_content"/>
				<ImageButton
						android:id="@+id/play_next"
						android:src="@drawable/play_btn_next_selector"
						android:background="@color/transparent"
						android:layout_width="0dp"
						android:layout_weight="1"
						android:layout_height="wrap_content"/>
				<ImageButton
						android:id="@+id/play_to_list"
						android:src="@drawable/play_btn_list_selector"
						android:background="@color/transparent"
						android:layout_width="0dp"
						android:layout_weight="1"
						android:layout_height="wrap_content"/>

			</LinearLayout>
			<LinearLayout
					android:id="@+id/play_msg"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">
				<TextView
						android:id="@+id/play_current_title"
						android:text="未知歌曲"
						android:singleLine="true"
						android:layout_margin="5dp"
						android:textAppearance="?android:textAppearanceLarge"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>
				<TextView
						android:id="@+id/play_current_artist_album"
						android:layout_margin="5dp"
						android:text="未知艺术家 - 未知专辑"
						android:singleLine="true"
						android:textAppearance="?android:textAppearanceLargePopupMenu"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>
				<SeekBar
						android:id="@+id/seekbar"
						android:thumb="@drawable/thumb_dn"
						android:layout_width="match_parent"
						android:progressDrawable="@drawable/seekbar_progress"
						android:maxHeight="5dp"
						android:layout_height="wrap_content"/>

				<RelativeLayout android:layout_width="match_parent"
				                android:layout_height="wrap_content">
					<TextView
							android:id="@+id/play_current_time"
							android:text="00:00"
							android:layout_margin="5dp"
							android:textAppearance="?android:textAppearanceMedium"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
					<TextView
							android:id="@+id/play_duration"
							android:text="00:00"
							android:layout_alignParentRight="true"
							android:layout_margin="5dp"
							android:textAppearance="?android:textAppearanceMedium"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
				</RelativeLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</FrameLayout><!-- From: file:/D:/Android/HMusic/app/src/main/res/layout/fragment_play.xml -->